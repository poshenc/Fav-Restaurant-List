<form action="/restaurants" method="POST" class="w-50 ml-5 mt-5">
  <div class="form-group">
    <label for="name">餐廳名稱</label>
    <input type="text" class="form-control" id="name" name="name" required>
  </div>

  <div class="form-group">
    <label for="category">餐廳類別</label>
    <input type="text" class="form-control" id="category" name="category" required>
  </div>

  <div class="form-group">
    <label for="image">圖片 URL</label>
    <input type="url" class="form-control" id="image" name="image" required>
  </div>

  <div class="form-group">
    <label for="location">地址</label>
    <input type="text" class="form-control" id="location" name="location" required>
  </div>

  <div class="form-group">
    <label for="phone">電話</label>
    <input type="tel" class="form-control" id="phone" name="phone" required>
  </div>

  <div class="form-group">
    <label for="google_map">Google Maps
    </label>
    <input type="url" class="form-control" id="google_map" name="google_map" required>
  </div>

  <div class="form-group">
    <label for="rating">評分</label>
    <input type="number" class="form-control" id="rating" name="rating" min="1" max="5" step="0.1" required>
  </div>

  <div class="form-group">
    <label for="description">介紹</label>
    <textarea class="form-control" id="description" name="description" required>{{restaurants.description}}</textarea>
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>